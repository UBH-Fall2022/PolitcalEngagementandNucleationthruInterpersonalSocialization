doctype html
html(lang="en")
    head 
        include includes/head
        title Chat
    body 
        include includes/navbar
        .container-fluid
            .row.mt-2
                .col
                    form(action="/chat", method="post") 
                        .form-row.my-2
                            .col-md-4
                                label(for="title") Title
                            .col-md-8
                                input.form-control(type="text" name="title" placeholder="Title...")
                        .form-row.my-2
                            .col-md-4
                                label(for="cotext") Context
                            .col-md-8
                                input.form-control(type="url" name="context" placeholder="https://www....")
                        .form-row.my-2
                            .col-md-4.d-xs-none.d-md-block
                            .col-md-8
                                input.w-100.btn.btn-outline-primary(type="submit", value="Post")
            include includes/topic_template
            each topic in topics 
                +topic_template(topic)