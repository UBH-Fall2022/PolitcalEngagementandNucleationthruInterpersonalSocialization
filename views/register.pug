doctype html
html(lang="en")
    head
        title Login
        include includes/head
    body 
        include includes/navbar
        .container-fluid 
            .row.flex
                .col-md-2
                .col-md-8.d-flex.justify-content-center(style="align-items: middle;")
                    form.w-100.text-white(action="/register", method="post")
                        .row.mt-2
                            h1 Register
                        .row.my-2
                            label.col-sm-2(for="username") Username
                            .col-sm-10 
                                    input.form-control#username(name="username" type="username" placeholder="e.g. JohnDoe123")
                        .row.my-2
                            label.col-sm-2(for="email") Email
                            .col-sm-10 
                                input.form-control#email(name="email" type="email" placeholder="e.g. john.doe@example.com")
                        .row.my-2 
                            label.col-sm-2.col-form-label(for="password") Password 
                            .col-sm-10
                                input.form-control#password(name="password" type="password" placeholder="**********")
                        .row.my-2 
                            .col-sm-2
                            .col-sm-10
                                input.w-100.btn.btn-outline-primary(type="submit", value="Register")  
                        .row-my-2 
                            .col
                                p.text-center Already have an account 
                                    a(href="/login") Login
                .col-md-2