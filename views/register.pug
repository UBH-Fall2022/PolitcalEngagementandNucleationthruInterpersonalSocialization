doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Login
    body 
        form(action="/register", method="post")
            .form-group-row
                label.col-sm-2(for="username") Username
                .col-sm-10 
                    input.form-control-plaintext#email(name="username" type="username")
                label.col-sm-2(for="email") Email
                .col-sm-10 
                    input.form-control-plaintext#email(name="email" type="email")
            .form-group-row 
                label.col-sm-2.col-form-label(for="password") Password 
                .col-sm-10
                    input.form-control#password(name="password" type="password")
            .form-group-row 
                input(type="submit", value="Login")  